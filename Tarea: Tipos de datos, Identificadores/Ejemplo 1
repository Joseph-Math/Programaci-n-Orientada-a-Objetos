def calcular_area_triangulo(base, altura):
    """
    Calcula el área de un triángulo dado su base y altura.
    Retorna el valor del área calculada.
    """
    area = (base * altura) / 2
    return area

def main():
    # Solicitar al usuario la base y altura del triángulo
    base = float(input("Ingrese la longitud de la base del triángulo: "))
    altura = float(input("Ingrese la altura del triángulo: "))

    # Calcular el área utilizando la función definida
    area_triangulo = calcular_area_triangulo(base, altura)

    # Mostrar el resultado al usuario
    print(f"El área del triángulo con base {base} y altura {altura} es: {area_triangulo}")

if __name__ == "__main__":
    main()

